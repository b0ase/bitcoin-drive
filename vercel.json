{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/drive.html",
      "dest": "/public/drive.html"
    },
    {
      "src": "/bitcoin-drive-landing.html",
      "dest": "/public/bitcoin-drive-landing.html"
    },
    {
      "src": "/drive-app.js",
      "dest": "/public/drive-app.js"
    },
    {
      "src": "/drive-styles.css",
      "dest": "/public/drive-styles.css"
    },
    {
      "src": "/",
      "dest": "/public/bitcoin-drive-landing.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "includeFiles": "uploads/**"
    }
  }
}